<% title "Sign In" %>

<div class="container">
  <div class="row">
    <h1 class="text-center">Sign In to Continue</h1>

    <div class="col-lg-4 col-lg-offset-4 white-container">

        <%= render "devise/shared/omniauth_links" %>
        <%= render "layouts/line_divider" %>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'form-control' }}) do |f| %>
        <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        </div>

        <div class="form-actions">
            <%= f.button :submit, "Sign In", class:"btn btn-success btn-wide btn-lg btn-block" %>
        </div>
        <% end %>

        <%= link_to "Not registered yet?", new_registration_path(resource_name) %><br />
        <%= render "devise/shared/links" %>
    </div>
</div>
</div>