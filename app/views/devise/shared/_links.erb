<hr>

<%- if controller_name != 'registrations' %>
    <%= link_to "Not registered yet? Sign Up.", new_registration_path(resource_name) %><br />
<% end %>

<%- if controller_name != 'sessions' %>
    <%= link_to "Already registered? Sign In.", new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Resend confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Resend unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>
