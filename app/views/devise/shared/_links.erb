<hr>

<%- if controller_name != 'registrations' %>
    <%= link_to "No account yet? Sign up for free!", new_registration_url(resource_name) %><br />
<% end %>

<%- if controller_name != 'sessions' %>
    <%= link_to "Already have an account? Sign in here.", new_session_url(resource_name) %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Resend confirmation instructions", new_confirmation_url(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Resend unlock instructions?", new_unlock_url(resource_name) %><br />
<% end -%>
