<% title "Sales"  %>

<div class="container">
    <div class="row">
      <div class="col-xs-12">
        <%= render 'recent_sales' %>

        <h3>Sales Statistics</h3>
        <%= render "sales_stats" %>

        <div class="panel panel-info">
          <div class="panel-heading"><i class="fa fa-line-chart"></i> Sales By Title (in USD)</div>
          <div class="panel-body">
            <%= pie_chart(@aggregated_sales) if @aggregated_sales.present? %>
          </div>
        </div>

        <div class="panel panel-info">
          <div class="panel-heading"><i class="fa fa-calendar"></i> Sales Quantity By Date</div>
          <div class="panel-body">
            <%= line_chart @sales_past_month.group_by_day(:purchased_at).count if @sales_past_month.present? %>
          </div>
        </div>
      </div>
  </div>
