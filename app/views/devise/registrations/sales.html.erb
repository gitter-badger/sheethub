<% title "Sales"  %>

<div class="container">
    <div class="row">
      <%= render 'user_dashboard_sidebar' %>
      <div class="col-xs-10">
        <h1>All Sales <a href="<%= user_download_sales_data_url %>" class="btn btn-default pull-right"><em class="fa fa-download"></em> Download Sales Data CSV</a></h1>
        <%= render 'recent_sales', sales: @all_sales %>

        <h1>Sales Statistics</h1>
        <%= render 'sales_stats', aggregated_sales: @aggregated_sales, recent_sales:@sales_past_month %>
        <%= render 'sales_revenue_by_title_chart', aggregated_sales: @aggregated_sales %>
        <%= render 'sales_quantity_by_date_chart', sales_past_month:@sales_past_month %>
      </div>
  </div>
