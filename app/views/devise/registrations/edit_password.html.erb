<% title "Password Settings"  %>

<div class="container">
    <div class="row">
      <h1>Password Settings</h1>

      <div class="col-xs-2">
        <ul class="nav nav-pills nav-stacked">
          <li role="presentation"><a href="<%= user_settings_path %>"><i class="fa fa-cog"></i> Profile</a></li>
          <li role="presentation" class="active"><a href="<%= user_password_settings_path %>"><i class="fa fa-key"></i> Password</a></li>
          <li role="presentation"><a href="<%= user_membership_settings_path %>"><i class="fa fa-star"></i> Membership</a></li>
        </ul>
      </div>

        <div class="col-xs-10 white-container">
          <div class="col-xs-5">
          <%= simple_form_for(@user, url: user_password_update_path(@user), defaults: { input_html: { class: 'form-control' }} ) do |f| %>
            <div class="form-inputs">
              <%= f.input :current_password %>
              <hr>
              <%= f.input :password, label: "New password" %>
              <%= f.input :password_confirmation, label: "New password confirmation" %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Update Password", class: "btn btn-success btn-lg btn-block" %>
            </div>
          <% end %>
          </div>
        </div>
  </div>
</div>
