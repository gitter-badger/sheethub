<% title "#{@user.display_name}'s Favorites"  %>

<%= render 'profile_banner', user:@user %>
<div class="nav-strip nav-strip-profile">
<div class="container-fluid">
<ul class="list-inline">
  <li><h4><a href="<%= user_profile_url(subdomain: @user.username) %>">Works</a></h4></li>
  <li class="active"><h4><a href="<%= user_favorites_url(subdomain: @user.username) %>">Favorites</a> <span class="fade-text"><%= @favorites.count %></h4></li>
</ul>
</div>
</div>

<div class="container">
    <div class="row">
      <div class="col-xs-12">
        <% if @favorites.any? %>
          <%= render 'favorites', favorites: @favorites %>
        <% else %>
          <h2 class="text-center"><em class="fa fa-eye-slash"></em></h2>
          <% if @user == current_user %>
            <h2 class="text-center">You have no favorites.</h2>
            <a href="<%= discover_url %>" class="btn btn-success btn-sleek center-block"><em class="fa fa-eye"></em> Discover</a>
          <% else %>
            <h2 class="text-center">This user has no favorites.</h2>
          <% end %>
        <% end %>

      </div>
  </div>
</div>