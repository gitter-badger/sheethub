<% title "Membership Settings"  %>

<div class="container">
    <div class="row">
      <h1>Membership Settings</h1>

      <div class="col-xs-2">
        <ul class="nav nav-pills nav-stacked">
          <li role="presentation"><a href="<%= user_settings_path %>"><i class="fa fa-cog"></i> Profile</a></li>
          <li role="presentation"><a href="<%= user_password_settings_path %>"><i class="fa fa-key"></i> Password</a></li>
          <li role="presentation" class="active"><a href="<%= user_membership_settings_path %>"><i class="fa fa-star"></i> Membership</a></li>
        </ul>
      </div>

        <div class="col-xs-10 white-container">
          <% if @user && @user.basic? %>
            <p class="bg-info"><i class="fa fa-info-circle"></i><a href="<%= upgrade_path %>"> Upgrade</a> now to enjoy unlimited free uploads and extra features.</p>
          <% elsif @user && (@user.plus? || @user.pro?) %>
            <p class="bg-primary"><i class="fa fa-smile-o"></i> Thank you for supporting SheetHub! Together we can make SheetHub a great community for musicians! </p>
          <% end %>


          <%= render 'membership_details', user:@user %>
          <%= render 'membership_billing_details', payment_details: @payment_details %>

          <% unless @user.pro? %>
            <a href="<%= upgrade_path %>"><button type="button" class="btn btn-lg btn-success"><i class="fa fa-star"></i> Upgrade</button></a>
          <% end %>

          <%= render 'downgrade_panel', user:@user %>


        </div>
  </div>
</div>
