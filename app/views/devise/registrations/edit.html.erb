<% title "Settings"  %>

<div class="container">
    <div class="row">
      <h3>Settings</h3>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }, defaults: { input_html: { class: 'form-control' }}) do |f| %>
        <%= f.error_notification %>

        <div class="col-xs-4 white-container">

        <div class="form-inputs">
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :tagline, placeholder: "Something interesting about you", autofocus: true %>
          <%= f.input :website, placeholder: "Your personal website", autofocus: true %>

          <%= f.label :paypal_email %> <a href="<%= faq_path %>#paypal-transfer"><i class="fa fa-question-circle"></i></a>
          <%= f.input_field :paypal_email, placeholder: "Your Paypal account email to send earnings to", autofocus: true %>

          <div class="form-actions">
            <%= f.button :submit, "Update", class: "btn btn-success btn-lg btn-block" %>
          </div>
          <%= link_to "Back to Profile", user_profile_path(current_user.username), class: "btn btn-default btn-block"%>
        </div>

        </div>

          <div class="col-xs-4">
            <%= f.label :avatar %>
            <p class="bg-info"><span class="fa fa-picture"></span> Avatar dimensions can be up to 300x300 pixels or less. </p>
            <div class="avatar-input well">
              <%= image_tag resource.avatar_url %>
              <%= f.file_field :avatar %>
            </div>
          </div>

       <!--    <div class="col-xs-4">
            Email notification settings?

          </div> -->
      <% end %>
    </div>
  </div>
</div>
