<% title "Edit Your Profile"  %>

<div class="container">
    <div class="row">

  <h2>Edit Profile</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, defaults: { input_html: { class: 'form-control' }}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :tagline, autofocus: true %>
      <%= f.input :website, autofocus: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
  <% end %>

  <%= link_to "Back", profile_path(current_user.username) %>

  </div>
</div>
