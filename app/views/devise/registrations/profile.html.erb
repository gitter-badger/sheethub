<% if @user %>
  <% title "#{@user.username}'s Profile"  %>

  <div id="banner" class="profile-banner">
    <div class="center-block profile-banner-content" >
        <%= image_tag(@user.image, class: "profile-avatar") %>
        <div class="profile-bio">
          <h1><%= @user.username %></h1>
          <p class="tagline"><%= @user.tagline %></p>
          <%= link_to @user.website, @user.website %>
        </div>
    </div>
    <% if @user == current_user %>
      <a href="<%= edit_user_registration_path %>" class="btn btn btn-success"><span class="glyphicon glyphicon-edit"></span> Edit Profile</a>
    <% end %>
  </div>

  <div class="container sheets-container">
    <div id="page-content-wrapper">
      <div class="row">
        <div class="col-lg-3 profile-info">
            <div class="panel panel-info">
              <div class="panel-heading"><span class="glyphicon glyphicon-user"></span> <%= @user.username %></div>
              <div class="panel-body">
                <p><%= @user.bio %></p>
                <em>Member since <%= distance_of_time_in_words(Time.now, @user.created_at) %> ago</em>
            </div>
        </div>
      </div>

        <div class="col-lg-9">

        <ul class="nav nav-tabs" role="tablist">
          <li class="active"><a href="#">Sheet Music <span class="badge"><%= @user.sheets.count %></span></a></li>
          <li><a href="#">Favourites <span class="badge">0</span></a></li>
        </ul>

        <% if @sheets.any? %>
          <%= render '/sheets/sheets' %>
        <% else %>
            <h2><span class="glyphicon glyphicon-eye-close"></span></h2>
            <% if @user == current_user %>
              <h2>You have no sheets. Why not add one?</h2>
              <a href="<%= new_sheet_path %>" class="btn btn btn btn-success btn-sleek center-block"><span class="glyphicon glyphicon-cloud-upload"></span> Upload</a>
            <% else %>
              <h2>This user has no sheets.</h2>
            <% end %>
        <% end %>

        </div>
    </div>
  <% else %>
    <% title "User not found" %>
    <h2>User not found</h2>
  <% end %>

  </div>