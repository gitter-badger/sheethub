<% if @user %>
  <% title "#{@user.username}'s Profile"  %>

  <div id="banner" class="profile-banner">
    <div class="center-block profile-banner-content" >
        <%= image_tag(@user.image, class: "profile-avatar") %>
        <div class="profile-bio">
          <h1><%= @user.username %></h1>
          <p class="tagline"><%= @user.tagline %></p>
          <%= link_to @user.website, @user.website %>
        </div>
    </div>
    <% if @user == current_user %>
      <a href="<%= edit_user_registration_path %>" class="btn btn btn-success">Edit Profile</a>
    <% end %>
  </div>

  <div class="container">
    <div id="page-content-wrapper">
      <div class="row">
        <div class="col-lg-12">

        <% if @sheets.any? %>
          <%= render '/sheets/sheets' %>
        <% else %>
          <h2>You have no sheets. Why not add one?</h2>
        <% end %>

        </div>
      </div>
    </div>
  <% else %>
    <% title "User not found" %>
    <h2>User not found</h2>
  <% end %>

  </div>