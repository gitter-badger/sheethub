<div id="banner" class="profile-banner">
    <%= image_tag(user.avatar_url, class: "profile-avatar") %>
    <div class="profile-bio">
      <h1><%= user.display_name %></h1>
      <ul class="list-inline">
        <% if !user.basic? %><li><%= render 'layouts/user_badge', user: user%></li><% end %>
        <li><p><a href="<%= user_profile_url(subdomain:user.username) %>"><em class="fa fa-user"></em> <%= user.username %></a></p></li>
        <li><p><em class="fa fa-clock-o"></em> Joined <%= user.joined_at %></p></li>
        <% if user.website? %><li><p><a href="<%= url_with_protocol(user.website) %>" target="_blank"><em class="fa fa-link"></em> <%= user.website %></a></p></li><% end %>
      </ul>
        <% if user.tagline? %><p class="tagline"><%= user.tagline %></p><% end %>
    </div>
</div>