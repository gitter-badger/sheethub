<% if current_user == @user %>
<div class="tab-pane active" id="private-sheets">
  <% if @private_sheets.any? %>
    <%= render '/sheets/private_sheets' %>
  <% else %>
    <h2><span class="glyphicon glyphicon-eye-close"></span></h2>
    <% if @user == current_user %>
      <h2>You have no private sheets. Why not add one?</h2>
      <a href="<%= new_sheet_path %>" class="btn btn btn btn-success btn-sleek center-block"><span class="glyphicon glyphicon-cloud-upload"></span> Upload</a>
    <% else %>
      <h2>This user has no sheets.</h2>
    <% end %>
  <% end %>
</div>
<% end %>