<div class="tab-pane" id="sales-by-title">
  <% if @published_sheets.any? %>
    <%= pie_chart @published_sheets.group(:title).count %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Sheet</th>
          <th>Total Orders</th>
          <th>Estimated Total Earnings <a href="<%= faq_path %>#earnings-calculation"><span class="glyphicon glyphicon-question-sign"></span></a></th>
        </tr>
      </thead>
      <tbody>
          <% @published_sheets.each do |sheet| %>
            <tr>
              <td><%= link_to sheet.title, sheet_path(sheet) %></td>
              <td><%= sheet.total_sold %></td>
              <td><%= number_to_currency(sheet.total_royalties) %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
  <% else %>
    <h2><span class="glyphicon glyphicon-eye-close"></span></h2>
    <h2>You have no sales yet.</h2>
  <% end %>
    <h4>Promote your sheets through the Share buttons to sell and earn more.</h4>
</div>