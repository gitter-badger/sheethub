<div class="container">
  <div class="row">
    <h1 class="text-center">Forgot Your Password?</h1>
    <div class="col-lg-4 col-lg-offset-4 white-container">
        <%= simple_form_for(resource, as: resource_name, url: password_url(resource_name), html: { method: :post }, defaults: { input_html: { class: 'form-control' }}) do |f| %>
          <%= f.error_notification %>
          <%= f.input :email, required: true, autofocus: true, placeholder: 'Your SheetHub account email address' %>
          <%= f.button :submit, "Send password reset instructions", class:"btn btn-success" %>
        <% end %>
    </div>
</div>
</div>

