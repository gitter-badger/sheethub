<div class="container">
  <div class="row">

    <h1 class="text-center">Resend Confirmation Instructions</h1>

    <div class="col-lg-4 col-lg-offset-4 white-container">
    <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, defaults: { input_html: { class: 'form-control' }}) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :confirmation_token %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, placeholder: 'Your email address' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Resend", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>