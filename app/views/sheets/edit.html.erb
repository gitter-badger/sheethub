
<div class="container">
    <h1>Editing <a href="<%= sheet_path(@sheet) %>"><%= @sheet.title %></a></h1>

    <div id="sheet-content" class="col-xs-8">
        <%= image_tag("/assets/sheet.png", :class => "sample_sheet") %>
    </div>

    <div id="sheet-sidebar" class="col-xs-4">
        <div class="panel panel-info">
          <div class="panel-body">
                <%= render 'form' %>
          </div>
        </div>

        <%= render 's3_uploader' %>

        <div class="panel panel-danger">
          <div class="panel-heading"><i class="fa fa-warning"></i> Danger Zone</div>
          <div class="panel-body">
                <%= link_to raw("<i class='fa fa-trash'></i> Delete this Sheet"), @sheet, method: :delete, data: { confirm: 'Are you sure you want to delete this sheet? This step can be undone.' }, class:"btn btn-danger" %>
          </div>
        </div>

    </div>

</div>
