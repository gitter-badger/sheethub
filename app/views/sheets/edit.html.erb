
<div class="container">
    <h1>Editing sheet</h1>

    <div id="sheet-content" class="col-xs-8">
        <%= image_tag("/assets/sheet.png", :class => "sample_sheet") %>
    </div>

    <div id="sheet-sidebar" class="col-xs-4">
        <a href="<%= sheet_path(@sheet) %>">
        <button type="button" class="btn btn-default "><span class="glyphicon glyphicon-arrow-left"></span> Go Back</button></a>

        <div class="panel panel-info">
          <div class="panel-body">
                <%= render 'form' %>
          </div>
        </div>

        <%= render 's3_uploader' %>

        <div class="panel panel-danger">
          <div class="panel-heading"><span class="glyphicon glyphicon-remove"></span> Danger Zone</div>
          <div class="panel-body">
                <%= link_to 'Delete this Sheet', @sheet, method: :delete, data: { confirm: 'Are you sure you want to delete this sheet? This step is permanent and cannot be undone.' }, class:"btn btn-danger" %>
                <p><em>Once you delete a sheet, there is no going back. Please be certain.</em></p>
          </div>
        </div>

    </div>

</div>
