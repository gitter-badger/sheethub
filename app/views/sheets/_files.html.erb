 <div class="panel panel-info">
    <div class="panel-heading"><span class="glyphicon glyphicon-file"></span> Files</div>
    <div class="panel-body">
        <ul id="sheet-files">
            <!-- Main PDF file -->
            <li>
                <a href="<%= @sheet.pdf.url %>">
                    <div class="sheet-file">
                    <p><span class="glyphicon glyphicon-save"></span> <%= @sheet.pdf_file_name %> <strong><%= number_to_human_size(@sheet.pdf_file_size) %></strong></p>
                    </div>
                </a>
            </li>

            <!-- Additional files -->
            <% for asset in @sheet.assets %>
                <li>
                <a href="<%= asset.url %>">
                    <div class="sheet-file">
                        <p><span class="glyphicon glyphicon-save"></span> <%= asset.filename %> <strong><%= number_to_human_size(asset.filesize) %></strong></p>
                    </div>
                </a>
                </li>
            <% end %>
            </ul>
        </div>
    </div>