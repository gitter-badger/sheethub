<div class="panel panel-success">
    <div class="panel-body bg-feathers">
        <% if current_user && sheet.uploaded_by?(current_user) %>
            <%= render 'edit_sheet_button', sheet: sheet %>
        <% elsif current_user && sheet.purchased_by?(current_user) %>
            <span class="sheet-buy-now-text text-center"><p><i class="fa fa-smile-o"></i> PURCHASED</p></span>
        <% elsif sheet.free? %>
            <span class="sheet-buy-now-text text-center"><p><i class="fa fa-smile-o"></i> FREE</p></span>
        <% elsif current_user.nil? %>
            <a href="<%= new_user_session_path %>"><button type="button" class="btn btn-success col-xs-8"><i class="fa fa-shopping-cart"></i> Buy Now</button></a>
            <span class="sheet-price col-xs-4"><p><%= "$#{sheet.price}" %></p></span>
        <% else %>
            <a data-toggle="modal" data-target="#buyNowModal"><button type="button" class="btn btn-success col-xs-8"><i class="fa fa-shopping-cart"></i> Buy Now</button></a>
            <span class="sheet-price col-xs-4"><p><%= number_to_currency(sheet.price) %></p></span>
        <% end %>
    </div>
</div>

<div class="modal fade" id="buyNowModal" role="dialog" aria-labelledby="flagModal" aria-hidden="true">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <button id="modal-close-btn" type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="flagModal">Buy <%= sheet.title %></h4>
      </div>
      <div class="modal-body">
        <p class="bg-info"><i class="fa fa-unlock"></i> Get Unlimited Access to <%= link_to sheet.title, sheet %> by purchasing it for <strong><%= number_to_currency(sheet.price) %></strong></p>

        <br/>
        <p class="text-center">You will receive:</p>
        <ul id="sheet-files">
            <!-- Main PDF file -->
            <% if sheet.pdf.present? %>
            <li class="text-center">
                <p><i class="fa fa-download"></i><strong> <%= sheet.pdf_file_name %></strong> (<%= number_to_human_size(sheet.pdf_file_size) %>)</p>
            </li>
            <% else %>
            <li>
                <p class="bg-danger"><i class="fa fa-eye-slash"></i> No PDF File Found.</p>
            </li>
            <% end %>

            <!-- Additional files -->
            <% for asset in sheet.assets %>
            <li>
                <p><i class="fa fa-download"></i><strong> <%= asset.filename %></strong>(<%= number_to_human_size(asset.filesize) %>)</p>
            </li>
            <% end %>
        </ul>
        <br/>

        <hr>
        <strong>What happens next?</strong>
        <p>Once you complete your purchase, you'll be able to view and print all of your purchased sheet music anytime, on any platform and device - without ever paying again. And we'll send you an email receipt containing your full purchase details. Enjoy! </p>

      </div>
      <div class="modal-footer">
          <%= image_tag("https://www.paypalobjects.com/webstatic/en_SG/mktg/Logos/AM_SbyPP_mc_vs_dc_ae.jpg", class:"paypal-logo") %>
          <a id="paypal-checkout-btn" href="<%= checkout_path(:sheet => sheet) %>" data-method="post"><button type="button" class="btn btn-success"><i class="fa fa-paypal"></i> Checkout with Paypal</button></a>
      </div>
    </div>
  </div>
</div>