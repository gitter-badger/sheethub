<%= simple_form_for @sheet do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>


  <%= f.label :instruments %>
  <br>
  <%= f.input_field :instruments_list, collection: Sheet.values_for_instruments, prompt: "Choose instruments", multiple: true , id: "instruments-field"%>

  <%= f.label :composers %>
  <br>
  <%= f.input_field :composer_list, collection: @composers, prompt: "Add composer(s)", multiple: true , id: "composers-field"%>

  <%= f.label :genres %>
  <br>
  <%= f.input_field :genre_list, collection: @genres, prompt: "Add genres", multiple: true , id: "genres-field"%>

  <%= f.label :origins %>
  <br>
  <%= f.input_field :origin_list, collection: @origins, prompt: "Where is this from?", multiple: true , id: "origins-field"%>

  <%= f.input :description %>
  <%= f.input :difficulty, :as => :select, :collection => Sheet.difficulties.keys.to_a %>


  <%= f.button :submit %>
<% end %>