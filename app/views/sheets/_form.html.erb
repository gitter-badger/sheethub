<%= simple_form_for @sheet do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>


  <%= f.label :instruments %>
  <br>
  <%= f.input_field :instruments, collection: Sheet.values_for_instruments, prompt: "Choose instruments", multiple: true , id: "instruments-field"%>

  <%= f.label :tags %>
  <br>
  <%= f.input_field :tag_list, collection: @tags, prompt: "Add genres, origin, composers...", multiple: true , id: "tags-field"%>

  <%= f.label :genres %>
  <br>
  <%= f.input_field :genre_list, collection: @genres, prompt: "Add genres", multiple: true , id: "genres-field"%>



  <%= f.input :description %>
  <%= f.input :pages %>
  <%= f.input :difficulty, :as => :select, :collection => Sheet.difficulties.keys.to_a %>


  <%= f.button :submit %>
<% end %>