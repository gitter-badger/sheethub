<%= simple_form_for sheet, html: {multipart: true} do |f| %>
  <%= f.error_notification %>

  <%=f.hidden_field :user_id, value: current_user.id %>

  <%= f.label :visibility %>
  <%= f.input_field :visibility, :as => :select, :collection => Sheet.visibilities.keys %>

  <%= f.input :title, placeholder: "What's the title of your piece?" %>
  <%= f.label :license %> <a href="<%= faq_path %>#licenses"><i class="fa fa-question-circle"></i></a>
  <%= f.input_field :license, :as => :select, :collection => Sheet.licenses.keys %>

  <%= f.input :description, :input_html => {:rows => 5}, placeholder: "Background, instructions, tuning information, external links here" %>

  <%= f.label "Price in US$" %>
  <div class="input-group">
  <span class="input-group-addon">$</span>
    <%= f.input_field :price_cents, placeholder: "What's the minimum price to pay to get access to uploads?" %>
  </div>

  <%= f.label :instruments %>
  <br>
  <%= f.input_field :instruments_list, collection: Sheet.values_for_instruments, prompt: "Choose instruments", multiple: true , id: "instruments-field"%>

  <%= f.label :composers %>
  <br>
  <%= f.input_field :composer_list, collection: composers.collect{|tag| tag.name}, prompt: "Add composers", multiple: true , id: "composers-field"%>

  <%= f.label :genres %>
  <br>
  <%= f.input_field :genre_list, collection: genres.collect{|tag| tag.name}, prompt: "Add genres", multiple: true , id: "genres-field"%>

  <%= f.label :sources %>
  <br>
  <%= f.input_field :source_list, collection: sources.collect{|tag| tag.name}, prompt: "Where is this from?", multiple: true , id: "sources-field"%>

  <%= f.label :pdf %>
  <p class="bg-warning"><i class="fa fa-info-circle"></i> Max 20MB filesize</p>
  <% if params[:action] == "edit" && sheet.pdf.present? %>
  <ul id="sheet-files">
    <li>
        <a href="<%= download_sheet_path(sheet) %>">
            <div class="sheet-file">
            <p><i class="fa fa-download"></i> <%= sheet.pdf_file_name %> <strong><%= number_to_human_size(sheet.pdf_file_size) %></strong></p>
            </div>
        </a>
    </li>
  </ul>
  <% end %>
  <%= f.file_field :pdf %>

  <%= f.button :submit, class: "btn btn-success btn-lg btn-block"%>
<% end %>