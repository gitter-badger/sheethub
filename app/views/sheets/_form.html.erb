<%= simple_form_for sheet, html: {multipart: true} do |f| %>
  <%= f.error_notification %>

  <%=f.hidden_field :user_id, value: current_user.id %>

  <% if current_user.pro? %>
    <%= f.label :visibility %>
    <%= f.input_field :visibility, :as => :select, :collection => Sheet.visibilities.keys %>
  <% end %>

  <%= f.input :title, placeholder: "What's the title of your piece?" %>
  <%= f.label :license %> <a href="<%= faq_path %>#licenses" target="blank"><em class="fa fa-question-circle"></em></a>
  <%= f.input_field :license, :as => :select, :collection => Sheet.licenses.keys %>

  <%= f.input :description, :input_html => {:rows => 5}, placeholder: "Background, instructions, tuning information, external video links. Adding Youtube, Vimeo, and Soundcloud links will automagically generate their respective embeds." %>

  <%= f.label :instruments %>
  <br>
  <%= f.input_field :instruments_list, collection: Sheet.values_for_instruments, prompt: "Choose instruments", multiple: true , id: "instruments-field"%>

  <%= f.label :composers %>
  <br>
  <%= f.input_field :composer_list, collection: composers.collect{|tag| tag.name}, prompt: "Add composers", multiple: true , id: "composers-field"%>

  <%= f.label :genres %>
  <br>
  <%= f.input_field :genre_list, collection: genres.collect{|tag| tag.name}, prompt: "Add genres", multiple: true , id: "genres-field"%>

  <%= f.label :sources %>
  <br>
  <%= f.input_field :source_list, collection: sources.collect{|tag| tag.name}, prompt: "Where is this from?", multiple: true , id: "sources-field"%>

  <hr>
  <%= f.label :pdf %> <a href="<%= faq_path %>#sheet-requirements" target="blank"><em class="fa fa-question-circle"></em></a>
  <% if params[:action] == "edit" && sheet.pdf.present? %>
  <ul id="sheet-files">
    <li>
        <a href="<%= download_sheet_path(sheet) %>">
            <div class="sheet-file">
            <p><em class="fa fa-download"></em> <%= sheet.pdf_file_name %> <strong><%= number_to_human_size(sheet.pdf_file_size) %></strong></p>
            </div>
        </a>
    </li>
  </ul>
  <% end %>
  <%= f.file_field :pdf %>

  <hr>

  <%= f.label "Price" %>
  <div class="input-group">
  <span class="input-group-addon">$</span>
    <%= f.input_field :price, placeholder: "e.g. 2.99", :value => number_to_currency(f.object.price, unit: "", precision: 2) %>
  </div>

  <div class="checkbox">
  <label>
    <%= f.input_field :enable_pdf_stamping, inline_label: "Stamp PDF with the buyer's info" %>
  </label>
  <a href="<%= faq_path %>#help-pdf-stamping" class="pull-right" target="_blank"><em class="fa fa-question-circle"></em></a>
  </div>

  <div class="checkbox">
  <label>
    <%= f.input_field :pay_what_you_want, inline_label: "Enable Pay-What-You-Want pricing" %>
  </label>
  <a href="<%= faq_path %>#help-pay-what-you-want" class="pull-right" target="_blank"><em class="fa fa-question-circle"></em></a>
  </div>

  <%= f.button :submit, class: "btn btn-success btn-lg btn-block"%>
<% end %>