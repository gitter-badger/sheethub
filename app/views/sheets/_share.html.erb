<div class="panel panel-info">
  <div class="panel-heading"><span class="glyphicon glyphicon-share"></span> Share</div>
  <div class="panel-body">
      <div class="form-group">
        <label class="control-label"><span class="glyphicon glyphicon-link"></span> Direct URL</label>
        <input class="form-control" id="inputPassword" value="<%= sheet_url(@sheet) %>">
    </div>
    <div class="share-buttons">
        <a href="https://www.facebook.com/sharer/sharer.php?u=<%= sheet_url(@sheet) %>" class='facebook share'></a>
        <a href="https://plus.google.com/share?url=<%= sheet_url(@sheet) %>" class='google share'></a>
        <a href="https://twitter.com/home?status=<%= @sheet.title %> <%= sheet_url(@sheet) %>" class='twitter share'></a>
    </div>
</div>
</div>
