<% if @current_user.present? %>
    <% if current_user.voted_for? @sheet %>
    <a href="<%= like_sheet_path(@sheet) %>" data-method="post">
        <button type="button" class="btn btn-block btn-default"><i class="fa fa-thumbs-up"></i> Liked!</button>
    </a>
    <% else %>
    <a href="<%= like_sheet_path(@sheet) %>" data-method="post">
        <button type="button" class="btn btn-block btn-success"><i class="fa fa-thumbs-up"></i> Like</button>
    </a>
    <% end %>
<% else %>
    <!-- TODO: Show like button, but link to login/signup page -->
    <a href="<%= new_user_session_path %>">
        <button type="button" class="btn btn-block btn-success"><i class="fa fa-thumbs-up"></i> Like</button>
    </a>
<% end %>