<div class="panel panel-info">
  <div class="panel-body">
    <p><%= sheet.description? ? sheet.description_html : 'No description.'%></p>

    <strong class="publishing-rights"><i class="fa fa-certificate"></i> <%= sheet.verbose_license %> <a href="<%= faq_path %>#licenses"><i class="fa fa-question-circle"></i></a></strong>
    <p data-toggle="tooltip" data-placement="left" title="<%= sheet.created_at.strftime('%d %B %Y') %>"><em>Published <%= distance_of_time_in_words(Time.zone.now, sheet.created_at) %> ago</em></p>
  </div>

    <ul class="list-group">
        <li class="list-group-item">
            <%= render 'sheet_tags', sheet:sheet %>
        </li>

        <li class="list-group-item well zeromargin">
            <%= render 'like_sheet_button', sheet:sheet %>
        </li>

        <%= render 'sheet_favorites', sheet:sheet, favorites: favorites %>
    </ul>
</div>