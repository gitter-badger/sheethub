<% title "Browse" %>

<div id="banner">
  <h1>Your community for sheet music</h1>
  <div class="navbar-form input-group search-bar banner-search-bar">
    <form action="<%= search_path %>" method="get">
      <div id="scrollable-dropdown-menu" class="has-feedback">
        <%= text_field_tag :q, params[:q], id:"search_form", class:"typeahead form-control", placeholder:"Search for music..." %>
        <i class="glyphicon glyphicon-search form-control-feedback"></i>
    </div>
  </form>
  </div>
</div>

<div class="container sheets-container">
  <div class="row">
    <div class="col-xs-12">
      <a href="#filter-toggle" class="btn btn-default btn-gradient pull-left" id="filter-toggle"><span class="glyphicon glyphicon-expand"></span> Toggle Filters</a>

      <%= simple_form_for :sheet, html: { class: 'sheet-sort-order' } do |f| %>
        <%= f.select :sort_order, Sheet::SORT_ORDERS %>
      <% end %>

      <h1 class="text-center"><span>Viewing all sheets</span></h1>
    </div>
  </div>

  <div id="wrapper">

    <%= render 'filters' %>

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <div class="row">
        <div class="col-lg-12">
          <%= render 'sheets' %>
        </div>
      </div>

      <div id="paginator" class="text-center">
        <%= paginate @sheets, remote: true %>
      </div>
    </div>
    <!-- /#page-content-wrapper -->

  </div>
</div>
