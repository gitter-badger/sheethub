<%
title "Discover"
description "SheetHub is an open platform built for musicians."
%>


<div class="container">
    <div class="col-xs-12">
      <div class="row">
            <h2 class="sheets-heading">Discover New Music</h2>
            <h4 class="sheets-subheading">or <%= link_to "publish your own", sheet_upload_url %> to a growing community of musicians</h4>
            <br/>
            <br/>
            <div class="flat-tags text-center">
              <a href="<%= discover_url %>"><span class="tag active">New To SheetHub</span></a>
              <a href="<%= best_sellers_url %>"><span class="tag">Best Sellers</span></a>
              <a href="<%= community_favorites_url %>"><span class="tag">Community Favorites</span></a>
            </div>
            <br/>
            <%= render 'sheets', sheets: @sheets %>
    </div>
    </div>
</div>

<%= render 'instruments_strip', instruments: @instruments %>
<%= render 'tag_strip', tags: @genres, tag_type:'genre' %>
<%= render 'tag_strip', tags: @composers, tag_type:'composer' %>
<%= render 'tag_strip', tags: @sources, tag_type:'source' %>

<div class="container">
    <div class="col-xs-12">
      <div class="row">
            <a href="<%= community_favorites_path %>"><h2 class="sheets-heading">Community Spotlight</h2></a>
            <h4 class="sheets-subheading"><em class="fa fa-star-o"></em> Get inspiration from these SheetHub members' top picks</h4>
            <br />
            <%= render 'featured_sheets', sheets: @featured %>
      </div>
    </div>
</div>

<%= render 'layouts/sign_up_banner' %>
<%= render 'layouts/upload_banner' %>
