<% if current_user.present? %>
    <% if current_user.voted_for? sheet %>
    <a href="<%= favorite_sheet_path(sheet) %>" data-method="post">
        <button type="button" class="btn btn-block btn-default"><em class="fa fa-star"></em> Favorited!</button>
    </a>
    <% else %>
    <a href="<%= favorite_sheet_path(sheet) %>" data-method="post">
        <button type="button" class="btn btn-block btn-success"><em class="fa fa-star"></em> Favorite </button>
    </a>
    <% end %>
<% else %>
    <!-- TODO: Show like button, but link to login/signup page -->
    <a href="<%= new_user_session_path %>">
        <button type="button" class="btn btn-block btn-success"><em class="fa fa-star"></em> Favorite</button>
    </a>
<% end %>